pipeline
        {
            agent { dockerfile true }
            environment {
                CI = 'true'
            }
            stages {
                stage('Build') {
                    steps {
                        sh 'npm install'
                    }
                }
                stage('Test') {
                    steps {
                        sh '/pipeline/scripts/run-tests.sh'
                    }
                }

                stage('Deploy'){
                    docker.image('node/6.14.2-alpine').inside{
                        sh 'npm install'
                        sh 'npm start'
                    }
                }
            }
            post {
                always {
                    archiveArtifacts 'reports/*'
                    junit 'reports/*.xml'
                }
            }
        }
