pipeline
        {
            agent { dockerfile true }
            environment {
                CI = 'true'
            }
            stages {
                stage('Build') {
                    steps {
                        sh 'npm install'
                    }
                }
                stage('Test') {
                    steps {
                        sh '/pipeline/scripts/run-tests.sh'
                    }
                }

                stage('Deploy'){
                    agent {
                        docker 'node:6.14.2-alpine'
                    }
                    steps{
                        sh 'npm install'
                        sh 'npm start'
                    }
                }
            }
            post {
                always {
                    archiveArtifacts 'reports/*'
                    junit 'reports/*.xml'
                }
            }
        }
